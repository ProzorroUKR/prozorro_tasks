<plan>
    <planId>{{ plan.id }}</planId>
    <procuringEntityName>{{ plan.procuringEntity.name }}</procuringEntityName>
    <procuringEntityIdentifierId>{{ plan.procuringEntity.identifier.id }}</procuringEntityIdentifierId>
    <classificationId>{{ plan.classification.id }}</classificationId>
    <classificationDescription>{{ plan.classification.description }}</classificationDescription>
    <additionalClassifications>{% for classification in plan.additionalClassifications %}
        <additionalClassification>
            <additionalClassificationsScheme>{{ classification.scheme }}</additionalClassificationsScheme>
            <additionalClassificationsId>{{ classification.id }}</additionalClassificationsId>
            <additionalClassificationsDescription>{{ classification.description }}</additionalClassificationsDescription>
        </additionalClassification>{% endfor %}</additionalClassifications>
    <budgetDescription>{{ plan.budget and plan.budget.description }}</budgetDescription>
    <budgetAmount>{{ plan.budget and plan.budget.amount }}</budgetAmount>
    <budgetCurrency>{{ plan.budget and plan.budget.currency }}</budgetCurrency>
    <budgetAmountNet>{{ plan.budget and plan.budget.amountNet }}</budgetAmountNet>
    <tenderPeriodStartDate>{{ format_date(plan.tender.tenderPeriod.startDate) }}</tenderPeriodStartDate>
    <tenderProcurementMethodType>{{ plan.tender.procurementMethodType }}</tenderProcurementMethodType>
    <breakdowns>{% if plan.budget  %}{% for breakdown in plan.budget.breakdown   %}
        <breakdown>
            <breakdownId>{{ breakdown.id }}</breakdownId>
            <breakdownTitle>{{ breakdown.title }}</breakdownTitle>
            <breakdownDescription>{{ breakdown.description }}</breakdownDescription>
            <breakdownAmount>{{ breakdown.value.amount }}</breakdownAmount>
        </breakdown>{% endfor %}{% endif %}</breakdowns>
</plan>